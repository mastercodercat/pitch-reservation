<% title "Edit Application Settings" %>

<%= form_tag update_app_config_path, :class => "form-horizontal" do %>
  <p>
    <%= label_tag "Site Title" %>
    <%= text_field_tag :site_title, Settings.site_title %>
  </p>
  <p>
    <%= label_tag "Admin email address" %>
    <%= text_field_tag :admin_email, Settings.admin_email %>
  </p>
  <p>
    <%= label_tag "Department name" %>
    <%= text_field_tag :department_name, Settings.department_name %>
  </p>
  <p>
    <%= label_tag "Contact Link Text" %>
	  <small>Set the text of the "Contact Us" link</small>
    <%= text_field_tag :contact_link_text, Settings.contact_link_text %>
  </p>
  <p>
    <%= label_tag "Contact Link Location" %>
	  <small>Set where the "Contact Us" link points.
	  (e.g. http://www.yale.edu/contact/ or mailto:contact@yale.edu)</small>
    <%= text_field_tag :contact_link_location, Settings.contact_link_location %>
  </p>
  <p>
    <%= label_tag "Home Link Text" %>
	  <small>Set the text of the "Home" link</small>
    <%= text_field_tag :home_link_text, Settings.home_link_text %>
  </p>
  <p>
    <%= label_tag "Home Link Location" %>
	  <small>Set where the "Home" link points.
	  (e.g. http://www.yale.edu/its/stc)</small>
    <%= text_field_tag :home_link_location, Settings.home_link_location %>
  </p>
  <p>
    <%= label_tag "Default Number of Items to Display Per Page in the Catalog" %>
    <%= number_field_tag :default_per_cat_page, Settings.default_per_cat_page, :in => 5..100, :step => 5 %>
  </p>
  <p>
    <%= label_tag "Upcoming checkin email body" %>
    <%= text_area_tag :upcoming_checkin_email_body, Settings.upcoming_checkin_email_body %>
  </p>
  <p>
    <%= label_tag "Overdue checkout email body" %>
    <%= text_area_tag :overdue_checkout_email_body, Settings.overdue_checkout_email_body %>
  </p>
  <p>
    <%= label_tag "Overdue checkin email body" %>
    <%= text_area_tag :overdue_checkin_email_body, Settings.overdue_checkin_email_body %>
  </p>
  <p>
    <%= submit_tag "Save changes", :class => "btn btn-primary" %>
  </p>
<% end %>
