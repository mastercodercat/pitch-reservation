<%= simple_form_for @announcement , html: { multipart: true}  do |f| %>
  <%= f.error_notification %>

  <%= f.label "Starts At" %>
  <%= f.datepicker :starts_at, :dateFormat => "yy-mm-dd" %>
 
  <%= f.label "Ends At" %>
  <%= f.datepicker :ends_at, :dateFormat => "yy-mm-dd" %>
  
  <%#= f.label "Visible To" %>
  <%#= select_tag(:visible_to, options_for_select([['Everyone','everyone'],['Only Admin','admin'],['Only Checkout','checkout']]) %>

  <%= f.input :message %>

  <%=f.submit  class: "btn btn-primary"%>
  <% end %>
