<%= simple_form_for @announcement , html: { multipart: true }  do |f| %>
  <%= f.error_notification %>

  <%= f.label "Starts At:" %>
  <%= f.text_field :starts_at, value: @announcement.starts_at.strftime('%m/%d/%Y'), class: 'date_start'%>
  <%= f.input :starts_at, as: :hidden, input_html: {id: 'date_start_alt'} %>

  <%= f.label "Ends At:" %>
  <%= f.text_field :ends_at, value: @announcement.ends_at.strftime('%m/%d/%Y'), class: 'date_end' %>
  <%= f.input :ends_at, as: :hidden, input_html: {id: 'date_end_alt'} %>

  <%#= f.label "Visible To" %>
  <%#= select_tag(:visible_to, options_for_select([['Everyone','everyone'],['Only Admin','admin'],['Only Checkout','checkout']]) %>

  <%= f.input :message, label: 'Annoucement Message', input_html: {class: 'form-control', rows: 7},
    hint: 'This message will be displayed to all users of the app. You can use markdown in this field.' %>
  <%= render partial: 'shared/markdown_button' %>

  <%= f.button :submit, cancel: announcements_path %>
  <% end %>
