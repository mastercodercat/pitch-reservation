<% if current_user.reservations.active.empty? %>
  <% else %>
  <hr />
  <div id="reservations">
    <h2>My current reservations</h2>
  <small>
    <ul>
    <% current_user.reservations.active.each do |reservation| %>
      <li>
        <%= link_to "#{EquipmentModel.find(reservation.equipment_model_id).name}:
                     #{reservation.start_date.to_date.to_s(:long)} &ndash;
                     #{reservation.due_date.to_date.to_s(:long)}".html_safe, reservation %>
      </li>
    <% end %>
    </ul>
  </small>
  </div>
<% end %>