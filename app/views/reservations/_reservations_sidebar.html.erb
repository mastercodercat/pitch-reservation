<div id="reservations">
  <h2>Your current reservations</h2>
  <% if current_user.reservations.empty? %>
    (none)
  <% else %>
  <small>
    <ul>
      <% current_user.reservations.active.each do |reservation| %>
        <li><%= link_to "#{reservation.start_date.to_date.to_s(:long)}&ndash;#{reservation.due_date.to_date.to_s(:long)}", reservation %></li>
      <% end %>
    </ul>
  </small>
  <% end %>
</div>