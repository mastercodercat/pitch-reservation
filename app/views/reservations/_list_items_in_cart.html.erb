<div id="list_items_in_cart">
<% if cart.items.size == 0 %>
  (empty)
</div>
<% else %>
<table id="table_list_items" class="table table-bordered table-striped table-condensed">
    <tbody>
  <% cart.items.each do |res| %>
    <tr>
      <td colspan="2"><%= link_to res.equipment_model.name, res.equipment_model %></td>
      <tr>
      <td rowspan="2"><%= link_to "Remove", {:url => remove_from_cart_path(res.equipment_model)},
                                :href => remove_from_cart_path(res.equipment_model),
                                :remote => true, :class => 'btn btn-mini' %></td>
                                </tr>
    </tr>
    </tbody>
  <% end %>
  </table>
</div>
<% end %>
