<% title "Reservation Check-in" %>
<% if !@check_in_set.empty? %>
  <%= form_tag( check_in_by_user_path, :method => "put" ) do %>
    <p>
      <%= link_to @user.name, show_all_reservations_for_user_path %> is checking in the following equipment:
    </p>
    <%= render :partial => "check_in_form", :collection => @check_in_set %>
    <div class="span12">
      <%= submit_tag "Check in equipment" %>
    </div>
  <% end %>
<% else %>
  <h3>
    <%= link_to @user.name, show_all_reservations_for_user_path %> has no equipment to check in.
  </h3>
<% end %>
