<% title "Reservations" %>

<table>
  <tr>
    <th>Reserver</th>
    <th>Start Date</th>
    <th>Due Date</th>
    <th>Status</th>
  </tr>
  <% for reservation in @reservations %>
    <tr>
      <td><%=h reservation.reserver.name %></td>
      <td><%=h reservation.start_date.to_date.to_s(:long) %></td>
      <td><%=h reservation.due_date.to_date.to_s(:long) %></td>
      <td><%=h reservation.status %></td>
      <td><%= link_to "Show", reservation %></td>
      <td><%= link_to "Destroy", reservation, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Reservation", new_reservation_path %></p>
