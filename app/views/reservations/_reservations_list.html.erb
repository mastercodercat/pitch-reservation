<table id="table_woo" class="datatable table table-striped table-bordered">
  <thead>
  <tr>
    <th>#</th>
    <% if current_user.can_checkout? %>
      <th>User</th>
    <% end %>
    <th>Equipment</th>
    <th>Item</th>
    <th>Start Date</th>
    <th>Due Date</th>
  </tr>
  </thead>
  <tbody>
  <% for reservation in reservations_list %>
    <tr>
      <td><%= link_to reservation.id, reservation %></td>
      <% if current_user.can_checkout? %>
        <% if (reservation.reserver) %>
          <td>
            <%= link_to reservation.reserver.name, reservation.reserver %>
            <% if current_user.can_checkout? %>
              (<%= link_to 'manage', manage_reservations_for_user_path(reservation.reserver.id) %>)
            <% end %>
            (<%= link_to 'current', current_reservations_for_user_path(reservation.reserver.id) %>)
        </td>
        <% else %>
          <td>User no longer exists</td>
        <% end %>
      <% end %>
      <td><%= link_to reservation.equipment_model.name, reservation.equipment_model %></td>
      <td>
        <% if !reservation.equipment_object.nil? %>
          <%= reservation.equipment_object.name %>
        <% end %>
      </td>
      <td><%= reservation.start_date.to_date.to_s(:long) %></td>
      <td><%= reservation.due_date.to_date.to_s(:long) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<hr />

