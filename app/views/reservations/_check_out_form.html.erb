<div id="<%= @reservation.id %>" class="well-nomargin span4">
<%= form_tag( checkout_by_user_path, :method => "put", :remote => true ) do %>

	<h4><%= @reservation.equipment_model.name %></h4>

	<%= select_tag "reservations[#{@reservation.id}][equipment_object_id]", @reservation.equipment_model.available_object_select_options, :prompt => 'Please select..' %>
	
	<p>
		<%= label_tag :notes %> <br />
		<%= text_area_tag :notes, @reservation.notes %>
	</p>
	
	<p>
  	  This equipment is <strong>due back on <%= @reservation.due_date.to_date.to_s(:long) %>.</strong><br />
  	  An overdue return will incur a combined late fee of <%= number_to_currency(@reservation.late_fee) %> / day.
	</p>

	<p>
  	<strong>Checkout procedures:</strong>
  	<ul>
    	<% if @reservation.equipment_model.checkout_procedures.nil? %>
          <em>There are no checkout procedures</em>
    	<% else %>
        <ol>
          <% @reservation.equipment_model.checkout_procedures.each_with_index do |checkout_procedure,i| %>
            <li>
              <% i += 1 %>
              <%= check_box_tag "reservations[#{@reservation.id}][checkout_procedures][#{i}]" %> <%= checkout_procedure.step %>
            </li>
          <% end %>
        </ol>
    	<% end %>
  	</ul>
	</p>

  <button style='btn' class='autosubmitmeclick'>Check out this equipment</button>
	<%#= submit_tag "Check out equipment" %>

<% end %>
</div>
