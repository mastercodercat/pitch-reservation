<p>
  <strong>Login:</strong>
  <%=h @user.login %>
</p>
<p>
  <strong>First Name:</strong>
  <%=h @user.first_name %>
</p>
<p>
  <strong>Last Name:</strong>
  <%=h @user.last_name %>
</p>
<p>
  <strong>Nickname:</strong>
  <%=h @user.nickname %>
</p>
<p>
  <strong>Phone:</strong>
  <%=h @user.phone %>
</p>
<p>
  <strong>Email:</strong>
  <%=h @user.email %>
</p>
<p>
