<% title "Search results for \"#{params[:query]}\"" %>

<div>
  <%= form_tag catalog_search_path do %>
    <%= label_tag :query, 'Search the catalog' %>
    <div class="input-append">
      <%# Must be on one line for button to be appended properly. If you need to edit it, %>
      <%# feel free to add line breaks while you're working on it, but make sure to return it %>
      <%# to one line when you're done. %>
      <%= search_field_tag 'query', params[:query] %>
    </div>
  <% end %>
</div>

<% if !@category_results.empty? %>
  <h2>Category results</h2>
  <% @category_results.each do |category| %>
      <h3 class="catalog">
        <!--print category name-->
        <%= link_to category.name, category_equipment_models_path(category) %>
      </h3> 
  <% end %>
  <br />
<% end %>

<% if !@equipment_results.empty? %>
  <% if !@category_results.empty? %>
    <h2>Equipment model results</h2>
  <% end %>
  <ul class="thumbnails">
    <% @equipment_results.each do |equipment_model| %>
      <li class="span3">      
        <%= render :partial => 'equipment_model_div', :locals => { :equipment_model => equipment_model } %>
      </li>
    <% end %>
  </ul>
<% end %>
