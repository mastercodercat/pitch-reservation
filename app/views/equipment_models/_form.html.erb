<%= simple_form_for @equipment_model, :html => { :multipart => true } do |f| %>
  <%= f.error_notification %>
  <%= f.association :category, include_blank: false %> <%= link_to "[add new category]", new_category_path %>
  <%= f.association :associated_equipment_models %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.input :late_fee %>
  <%= f.input :replacement_fee %>
  <%= f.input :max_per_user, label: "Maximum per user", hint: "leave blank to default to category value" %>
  <%= f.input :deleted_at, label: "Inactive", as: :deleted %>

  Checkout Procedures
  <%= f.simple_fields_for :checkout_procedures do |procedure| %>
    <%= render 'checkout_procedure_fields', :f => procedure %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'add step', f, :checkout_procedures %>
  </div>

  Checkin Procedures
  <%= f.simple_fields_for :checkin_procedures do |procedure| %>
    <%= render 'checkin_procedure_fields', :f => procedure %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'add step', f, :checkin_procedures %>
  </div>

  <%= f.input :photo, :as => :file, :label => "Upload File" %>
	

  <%= f.error :base %>
  <%= f.button :submit %>
<% end %>
