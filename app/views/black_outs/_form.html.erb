<%= simple_form_for(@black_out) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%# f.association :equipment_model, :collection => EquipmentModel.all.map{|em| [em.name,em.id]}.unshift(["All models",0]), :include_blank => false  %>

    <%= f.input :equipment_model_id, :value => 0, :as => :hidden %>

     <%= render :partial => 'shared/date_picker', :locals => {:object => @black_out} %>
   
    <%= f.input :notice, hint: 'This message will be displayed to users if they attempt to make a reservation on a blackout date' %>
    <%= f.input :black_out_type, label: 'Blackout Type', collection: [['Blackout',"hard"],['Notice Only',"soft"]]   %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
