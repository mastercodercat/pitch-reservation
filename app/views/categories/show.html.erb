<% title "Category: "+@category.name %>

<p>
  <strong>Max Per User:</strong>
  <%=h @category.max_per_user %>
</p>
<p>
  <strong>Max Checkout Length:</strong>
  <%=h @category.max_checkout_length %> days
</p>

<%= link_to "Add new "+@category.name.singularize+" model", new_category_equipment_model_path(@category) %>

<p>
  <%= link_to "Edit Category", edit_category_path(@category) %> |
  <%= link_to "Destroy Category", @category, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All Categories", categories_path %>
</p>
